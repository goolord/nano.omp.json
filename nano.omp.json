{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "right",
      "segments": [
        {
          "foreground": "darkGray",
          "properties": {
            "style": "full"
          },
          "style": "plain",
          "template": "{{ .Path }} ",
          "type": "path"
        },
        {
          "foreground": "green",
          "properties": {
            "branch_ahead_icon": "",
            "branch_behind_icon": "",
            "branch_gone_icon": "",
            "branch_icon": "",
            "branch_identical_icon": "",
            "cherry_pick_icon": "",
            "commit_icon": "",
            "fetch_status": true,
            "merge_icon": "",
            "rebase_icon": "",
            "revert_icon": "",
            "tag_icon": ""
          },
          "style": "plain",
          "template": "</>{{ .HEAD }}{{ if .Staging.Changed }}<yellow> \u25cf {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<red> \u25cf {{ .Working.String }}</>{{ end }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "green",
          "foreground_templates": [
            "{{ if .Error }}#ff0000{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "λ ",
          "type": "status"
        },
        {
          "foreground": "default",
          "style": "plain",
          "template": "› ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "version": 3
}